            <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
              <script type="text/javascript">
              $(function () {
                $(".add_price<%=x%>").click(function(){
                  $(".add_price<%=x%>").val("<%=newListItems[x]._id%>");
                  $(".add_price<%=x%>").attr('onclick','this.form.submit()');
                  setTimeout(function(){
                  $(".add_price<%=x%>").val("");
                  },1000);
                }) 
              });
              </script>
          </form>
          <form action="/user/add" method="post">
            <!--<td><%= newListItems[x].qty %> <input type="text" size="1"  class="add_qty" name="item_add" onclick="this.form.submit()" onfocus="this.value='<%=newListItems[x]._id%>'" > <button style="border-radius:1px ;">+</button></td>-->
