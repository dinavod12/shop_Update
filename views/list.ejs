 <div class="box">
  <!-- table -->
  <table class="table" id="mytable">
    <thead style="background-color:#E8EAE3">
      <tr>
        <th scope="#"> Delete </th>
        <th scope="col"> Product Name </th>
        <th scope="col"> Unit_Price </th>
        <th scope="col"> Quantity </th>
      </tr>
    </thead>
    <tbody style="background-color:#F8E5E5;">
      <% for(var x=0; x< newListItems.length; x++){   %>
      <tr>
        <div class="item"> 
          <form action="/user/delete" method="post">
            <th scope="row"><input type="checkbox" name="checkbox" value="<%=newListItems[x]._id%>" onChange="this.form.submit()"></th>
            <td><%= newListItems[x].name %></td>
          </form>
          <form action="/user/add/price" method="post">
            <!--<td><%= newListItems[x].Unit_Price %> <input type="text" size="1"  class="add_price" name="price_add" onclick="this.form.submit()" onfocus="this.value='<%=newListItems[x]._id%>'"> <button style="border-radius:1px ;">+</button></td>-->
